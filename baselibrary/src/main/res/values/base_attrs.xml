<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--RoundImageView自定义控件属性-->
    <declare-styleable name="RoundImageView">
        <attr name="riv_backgroundColor" format="color" />
        <attr name="riv_borderColor" format="color" />
        <attr name="riv_borderWidth" format="dimension" />
        <attr name="riv_borderCorner" format="dimension" />
        <attr name="riv_imgType" format="enum">
            <enum name="normal" value="0" />
            <enum name="round" value="1" />
            <enum name="circle" value="2" />
        </attr>
    </declare-styleable>

    <attr name="type">
        <enum name="none" value="0" />
        <enum name="circle" value="1" />
        <enum name="rounded_rect" value="2" />
    </attr>
    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />
    <attr name="rectRoundRadius" format="dimension" />

    <declare-styleable name="ImageViewPlus">
        <attr name="type" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="rectRoundRadius" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_borderWidth" format="dimension" />
        <attr name="civ_borderColor" format="color" />
        <attr name="civ_fillColor" format="color" />
    </declare-styleable>

    <!--无法左右滑动的ViewPager-->
    <declare-styleable name="NoSwipeViewpager">
        <attr name="isSwipeEnable" format="boolean" />
    </declare-styleable>

    <!--带清除键的EditText-->
    <declare-styleable name="ClearEditText">
        <attr name="clearIcon" format="reference" />
    </declare-styleable>

    <!--通用菜单栏控件-->
    <declare-styleable name="MenuItem">
        <attr name="mi_icon" format="reference" />
        <attr name="mi_title" format="string|reference" />
        <attr name="mi_sub_title" format="string|reference" />
        <attr name="mi_right_content" format="string|reference" />
        <attr name="mi_show_arrow" format="boolean" />
        <attr name="mi_show_dot" format="boolean" />
        <attr name="mi_show_divider" format="boolean" />

    </declare-styleable>

    <declare-styleable name="BarChartView">
        <attr name="bcv_title" format="string|reference"/>
        <attr name="bcv_xTitle" format="string|reference"/>
        <attr name="bcv_yTitle" format="string|reference"/>
        <attr name="bcv_titleColor" format="color"/>
        <!--内容填充色-->
        <attr name="bcv_contentColor" format="color"/>
        <!--内容文字颜色-->
        <attr name="bcv_textColor" format="color"/>
        <!--竖直均分-->
        <attr name="bcv_verticalLines" format="integer"/>
        <!--柱状图宽度-->
        <attr name="bcv_barWidth" format="dimension"/>
    </declare-styleable>

</resources>